{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../packages/shared/src/*"]
    },
    "jsx": "preserve",
    "types": [
      "node",
      "next",
      "@types/google.maps",
      "jest"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*",
    "../../packages/shared/src/**/*",
    "../../jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
